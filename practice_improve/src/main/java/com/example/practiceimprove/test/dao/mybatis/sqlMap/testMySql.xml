<mapper namespace="com.example.practiceimprove.test.dao.mybatis.mapper.TestMapper">
    <resultMap type="com.example.practiceimprove.test.model.TestYr"
               id="testYr"></resultMap>

    <!-- 查询字段的select部分 -->
    <sql id="queryAllSql">
    SELECT
         T1.ID            as id                   /*记录编号*/
        ,T1.AGE           as age               /*任务编号*/
        ,T1.USERNAME       as username           /*提出人*/
    </sql>

    <!-- 查询字段的from部分 -->
    <sql id="fromTableSql">
    FROM TEST T1
    WHERE 1=1
    </sql>

    <!-- 查询字段的where部分 -->
    <sql id="whereAllSql">
    </sql>


